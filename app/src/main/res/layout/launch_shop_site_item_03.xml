<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/ll_enter_shop"
        android:layout_width="0.0dip"
        android:layout_height="wrap_content"
        android:layout_weight="6.0"
        android:background="@drawable/light_yellow_selector"
        android:orientation="vertical"
        android:padding="8.0dip">

        <TextView
            android:id="@+id/launch_title_item_site"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:text="北京化工大学提货点"
            android:textColor="@*android:color/black" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5.0dip"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/launch_distance_item_title"
                style="@style/public_list_subheading_item_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="7.7KM" />

            <ImageView
                android:id="@+id/iv_store_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_enter_shop_detail"
        android:layout_width="0.0dip"
        android:layout_height="fill_parent"
        android:layout_weight="1.0"
        android:background="@drawable/light_yellow_selector"
        android:gravity="center">

        <ImageView
            android:id="@+id/iv_shop_details"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/jiantou" />
    </LinearLayout>
</LinearLayout>