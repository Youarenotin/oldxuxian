<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180.0dip"
    android:layout_height="wrap_content"
    android:background="@drawable/pop_xinxi"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@id/ll_enter_shop"
        android:layout_width="150.0dip"
        android:layout_height="wrap_content"
        android:background="@drawable/light_yellow_selector"
        android:gravity="center"
        android:padding="5.0dip">

        <TextView
            android:id="@+id/shop_overlay_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5.0dip"
            android:gravity="center_horizontal"
            android:singleLine="true"
            android:text="ss"
            android:textSize="14.0sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@id/ll_enter_shop_detail"
        android:layout_width="30.0dip"
        android:layout_height="fill_parent"
        android:background="@drawable/light_yellow_selector"
        android:gravity="center">

        <ImageView
            android:id="@+id/shop_overlay_detail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
            android:scaleType="center"
            android:src="@drawable/jiantou" />
    </LinearLayout>
</LinearLayout>