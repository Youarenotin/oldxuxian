<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:id="@+id/rl_forum_details_head"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:padding="10.0dip">

        <LinearLayout
            android:id="@+id/ll_forum_details_head_user"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_forum_details_head_user_head"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <LinearLayout
                android:layout_width="0.0dip"
                android:layout_height="fill_parent"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:layout_weight="2.0"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_forum_details_head_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="center"
                    android:text="name" />

                <TextView
                    android:id="@+id/tv_forum_details_head_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:gravity="bottom"
                    android:text="2015-06-30 15:23" />
            </LinearLayout>

            <TextView
                android:id="@+id/tv_forum_details_head_replies"
                android:layout_width="0.0dip"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1.0"
                android:gravity="center"
                android:text="评论贴子" />
        </LinearLayout>

        <View
            android:id="@+id/view_forum_details_head_line_01"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_below="@+id/ll_forum_details_head_user"
            android:layout_marginBottom="5.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/tv_forum_details_head_title"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_forum_details_head_line_01"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/ll_forum_details_head_replies"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_forum_details_head_title"
            android:layout_marginLeft="5.0dip"
            android:layout_marginTop="5.0dip"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yanjing" />

            <TextView
                android:id="@+id/tv_forum_details_head_hits_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:text="00" />

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/yuedu" />

            <TextView
                android:id="@+id/tv_forum_details_head_replies_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5.0dip"
                android:layout_marginRight="5.0dip"
                android:text="00" />
        </LinearLayout>

        <View
            android:id="@+id/view_forum_details_head_line_02"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"
            android:layout_below="@+id/ll_forum_details_head_replies"
            android:layout_marginBottom="5.0dip"
            android:layout_marginTop="5.0dip"
            android:background="@color/gray" />

        <LinearLayout
            android:id="@+id/ll_forum_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/view_forum_details_head_line_02"
            android:orientation="vertical" />
    </RelativeLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/rl_forum_details_head"
        android:layout_marginTop="5.0dip"
        android:background="@color/click_gray"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tv_forum_details_head_all_replies_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5.0dip"
            android:background="@color/click_gray"
            android:paddingLeft="20.0dip"
            android:text="全部评论"
            android:textColor="@color/subfield_text_color"
            android:textSize="@dimen/text_title_size" />
    </LinearLayout>

    <ImageView
        android:id="@+id/iv_forum_details_head_top"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>